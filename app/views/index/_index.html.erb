<div class = "outer">
  <div class = "inner">
  <ul class="errors">
  </ul>
  <%= form_for :session, url: sessions_path, remote: true do |f| %>
    <p>
      <%= f.label :email %>
      <%= f.email_field :email, placeholder: "Email" %>
    </p>
    <p>
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "Password" %>
    </p>
    <div>
      <%= f.submit value: "Log In" %>
    </div>
  <% end %>
  <br>
  <div>
    Not registered for EARP access? <%= link_to "Register", new_user_path, remote: true %>

  </div>
</div>
