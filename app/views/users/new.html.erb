<div class="outer">
  <div>
    <%= render partial: "partials/errors", locals: { errors: @user.errors.values.flatten } %>
  </div>
  <div>
    <h2>Register</h2>
    <%= form_for @user, url: users_path, method: :post do |f| %>
      <%= f.text_field :name, placeholder: "Name"  %>
      <%= f.email_field :email, placeholder: "Email" %>
      <%= f.password_field :password, placeholder: "Password" %>
      <%= select_tag :role, options_for_select([["University faculty", "owner"], ["EA staff", "staff"]]), name: "user[role]" %>
      <%= f.submit "Register" %>
    <% end %>
  </div>
</div>
