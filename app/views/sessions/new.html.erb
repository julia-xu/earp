<div>
  <%= form_for :session, url: 'sessions' do |f| %>
    <p>
      <%= select_tag :role, options_for_select([['Faculty', 'owner'], ['Staff', 'staff']]), name: 'session[role]' %>
    </p>
    <p>
      <%= f.label :email %>
      <%= f.email_field :email, placeholder: "Email" %>
    </p>
    <p>
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "Password" %>
    </p>
    <p>
      <%= f.submit value: "Log In" %>
    </p>
  <% end %>
</div>
