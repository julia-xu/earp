<div>
  <%= form_for :session, url: 'sessions' do |f| %>
    <p>
      <%= radio_button_tag :role, "owner" %>
      <%= label_tag(:role, "Faculty") %>
      <%= radio_button_tag :role, "staff" %>
      <%= label_tag(:role, "Staff") %>
    </p>
    <p>
      <%= f.label :email %>
      <%= f.email_field :email, placeholder: "Email" %>
    </p>
    <p>
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "Password" %>
    </p>
    <p>
      <%= f.submit value: "Log In" %>
    </p>
  <% end %>
</div>
